
{% macro setter_tr(setter)%}
<tr>
  <td>{{setter.name}}</td>
  <td>{{setter.routes_set}}</td>
  <td align="right">
    <a class="btn btn-sm border-0" href="{{url_for('routesetter.delete_setter', setter_id=setter.id)}}">
      <i class="bi bi-trash"></i>
    </a>  
  </td>
</tr>
{% endmacro %}

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Routes set</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for setter in routesetters %}
      {{setter_tr(setter)}}
    {% endfor %}
  </tbody>
<table