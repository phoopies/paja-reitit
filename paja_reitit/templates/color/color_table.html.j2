
{% macro color_tr(color)%}
<tr>
  <td>{{color.name}}</td>
  <td>{{color.code}}</td>
  <td align="right">
    <a class="btn btn-sm border-0" href="{{url_for('color.delete_color', color_id=color.id)}}">
      <i class="bi bi-trash"></i>
    </a>  
  </td>
</tr>
{% endmacro %}

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Code</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for color in colors %}
      {{color_tr(color)}}
    {% endfor %}
  </tbody>
<table